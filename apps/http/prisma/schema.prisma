generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  balance  Float    @default(10000.0)
  createdAt DateTime @default(now())

  orders    Order[]
  positions Position[]
  trades   Trade[]
  posts Post[]
  comments Comment[]
  wallet   Wallet?
}

model Post{
  id        Int     @id @default(autoincrement())
  userId    Int 
  content  String
  tags    String[]
  createdAt DateTime @default(now())
  likesCount Int     @default(0)
  commentsCount Int  @default(0)
  comments Comment[]
    user           User     @relation(fields: [userId], references: [id])
}

 model Comment {
  id       Int      @id @default(autoincrement())
  postId    Int
  userId    Int
  content   String
  createdAt DateTime @default(now())
    post           Post     @relation(fields: [postId], references: [id])
    user           User     @relation(fields: [userId], references: [id])
 }

 model Stock {
  id        Int      @id @default(autoincrement())
  symbol    String   @unique 
  name      String
  exchange  String?          
  currency  String?
  type      String?         
  createdAt DateTime @default(now())

  orders    Order[]
  positions Position[]
  trades    Trade[]
}

model Order {
  id        Int      @id @default(autoincrement())
  userId    Int
  stockId   Int

  side      OrderSide        
  type      OrderType        
  quantity  Int
  limitPrice Float?           

  status    OrderStatus @default(PENDING)
  createdAt DateTime    @default(now())

  user      User     @relation(fields: [userId], references: [id])
  stock     Stock    @relation(fields: [stockId], references: [id])
  trades    Trade[]
}

enum OrderSide {
  BUY
  SELL
}

enum OrderType {
  MARKET
  LIMIT
}

enum OrderStatus {
  PENDING
  EXECUTED
  CANCELLED
  PARTIAL
}


model Trade {
  id        Int      @id @default(autoincrement())
  orderId   Int
  userId    Int
  stockId   Int

  side      OrderSide
  quantity  Int
  price     Float          
  amount    Float          

  createdAt DateTime @default(now())

  user      User  @relation(fields: [userId], references: [id])
  order     Order @relation(fields: [orderId], references: [id])
  stock     Stock @relation(fields: [stockId], references: [id])
}

model Position {
  id           Int     @id @default(autoincrement())
  userId       Int
  stockId      Int
  quantity     Int     // current quantity user holds
  avgBuyPrice  Float   // weighted average

  user         User    @relation(fields: [userId], references: [id])
  stock        Stock   @relation(fields: [stockId], references: [id])
}

model Wallet {
  userId     Int       @id           
  balance    Float     @default(0)
  updatedAt  DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id])
  transactions WalletTransaction[]
}

model WalletTransaction {
  id           Int                 @id @default(autoincrement())
  userId       Int
  type         TransactionType
  amount       Float              
  balanceAfter Float
  referenceId  Int?                
  createdAt    DateTime            @default(now())

  user Wallet @relation(fields: [userId], references: [userId])
}

enum TransactionType {
  BUY
  SELL
  DEPOSIT
  WITHDRAW
  REFUND
  FEE
}
